<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Connect Plus</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../stylessheets/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../stylessheets/css/flag-icon.min.css">
    <link rel="stylesheet" href="../stylessheets/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../stylessheets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../images/shopping_bags.png" />
    <link rel="form icon" type="image/x-icon" href="favicon.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div align="center" class="brand-logo">
                  <img style="height: 25%; width: 25%;" src="../images/bazaarLogo.jpg">
                </div>
                <!--<h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>-->
                <div id="error" class="text-danger">
                  <%- include ("partials/error_messages") %>
                </div>
                <form class="pt-3 text-dark" id = "myForm" action="/users/register" method="POST">
                  <div class="form-group">
                    <b><label for="fname">Name*</label></b>
                    <input id="fname" name="name" class = "form-control form-control-lg name" type="text" placeholder="Name">
                  </div>
                  <div class="form-group">
                    <b><label for="email">Email*</label></b>
                    <input id="email" class="form-control form-control-lg" name="email" type="email" placeholder="abc@abctest.com">
                    <span style="font-size: 12px;" class="text-danger">*We will share your email with others*</span>
                  </div>
                  <div class="form-group">
                    <b><label for="country">Country</label></b>
                    <select class="form-control form-control-lg" name="country" id="country">
                      <option>Country</option>
                      <option>United States of America</option>
                      <option>United Kingdom</option>
                      <option>India</option>
                      <option>Germany</option>
                      <option>Argentina</option>
                      <option>Pakistan</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <b><label for="exampleSelectGender">Gender</label></b>
                    <select class="form-control" name="gender" id="exampleSelectGender">
                      <option>Male</option>
                      <option>Female</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <b><label>File upload</label></b>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                      <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                      <span class="input-group-append">
                        <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                      </span>
                    </div>
                  </div>
                  <div class="form-group">
                    <b><label for="exampleTextarea1">Description</label></b>
                    <textarea class="form-control" name="description" id="exampleTextarea1" rows="4"></textarea>
                  </div>
                  <div id="securityInfo">
                    <div class="form-group">
                      <b><label for="pass">Password</label></b>
                      <input id="pass" name="password" class="form-control form-control-lg" type="password" placeholder="password">
                    </div>
                    <div class="form-group">
                      <b><label for="cpass">Confirm Password</label></b>
                      <input id="cpass" type="password" class="form-control form-control-lg text-muted" placeholder="confirm password">
                    </div>
                    <div id="pass_message"></div>
                  </div>
                  <div class="form-check ml-4">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label text-muted form-check-label" for="exampleCheck1">I agree to all Terms & Conditions.</label>
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn submitBtn">SIGN UP</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="login.html" class="text-primary">Login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
    <script src="../js/upload_picture.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/misc.js"></script>
    <!-- endinject -->
  </body>
</html>

<script type="text/javascript">
  $('#pass, #cpass').on('keyup', function (){
    if ($('#pass').val() == $('#cpass').val())
    {
       $('#pass_message').html('<img src="/public/success.png"><h4 style="color: green;">Password Matched</h4>');
    }
    else
    {
      $('#pass_message').html('<img src="/public/failuer.png"><h4 style="color: red;">Kindly Match The Password</h4>');
    }

  });
</script>