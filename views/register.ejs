    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/fontawesome.css" integrity="sha384-eHoocPgXsiuZh+Yy6+7DsKAerLXyJmu2Hadh4QYyt+8v86geixVYwFqUvMU8X90l" crossorigin="anonymous"/>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <a class="fas fa-arrow-circle-left" class="btn btn-primary text-black" style="height: 50px; width: 50px;" href="/"></a>
                <div align="center" class="brand-logo" style="color: black;">
                  <h1 class="fas fa-store-alt"></h1>
                </div>
                <!--<h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>-->
                <div id="error" class="text-danger">
                  <%- include ("partials/error_messages") %>
                </div>
                <form class="pt-3" id = "myForm" action="/users/register" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <b><label class="text-dark" for="fname">Name*</label></b>
                    <input id="fname" name="name" class = "form-control form-control-lg name" type="text" placeholder="Name">
                  </div>
                  <div class="form-group">
                    <b><label class="text-dark" for="email">Email*</label></b>
                    <input id="email" class="form-control form-control-lg" name="email" type="email" placeholder="abc@abctest.com">
                    <span style="font-size: 12px;" class="text-danger">*We will share your email with others*</span>
                  </div>
                  <div class="form-group">
                    <b><label class="text-dark" for="country">Country</label></b>
                    <select class="form-control form-control-lg" name="country" id="country">
                      <option>Country</option>
                      <option>United States of America</option>
                      <option>United Kingdom</option>
                      <option>India</option>
                      <option>Germany</option>
                      <option>Argentina</option>
                      <option>Pakistan</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <b><label class="text-dark" for="exampleSelectGender">Gender</label></b>
                    <select class="form-control" name="gender" id="exampleSelectGender">
                      <option>Male</option>
                      <option>Female</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label class="text-dark">File upload</label>
                    <input type="file" name="user_image" class="file-upload-default">
                    <div class="input-group col-xs-12">
                      <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                      <span class="input-group-append">
                        <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                      </span>
                    </div>
                  </div>
                  <div class="form-group">
                    <b><label class="text-dark" for="exampleTextarea1">Description</label></b>
                    <textarea class="form-control" name="description" id="exampleTextarea1" rows="4"></textarea>
                  </div>
                  <div id="securityInfo">
                    <div class="form-group">
                      <b><label class="text-dark" for="pass">Password</label></b>
                      <input id="pass" name="password" class="form-control form-control-lg" type="password" placeholder="password">
                    </div>
                    <div class="form-group">
                      <b><label class="text-dark" for="cpass">Confirm Password</label></b>
                      <input id="cpass" type="password" class="form-control form-control-lg text-muted" placeholder="confirm password">
                    </div>
                    <div id="pass_message"></div>
                  </div>
                  <div class="form-check ml-4">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label text-muted form-check-label" for="exampleCheck1">I agree to all Terms & Conditions.</label>
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="submitBtn">SIGN UP</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="/users/login" class="text-primary">Login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../js/off-canvas.js"></script>
