    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/misc.js"></script>
    <!-- endinject -->
  </body>
</html>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  $('#pass, #cpass').on('keyup', function () {
    if ($('#pass').val() == $('#cpass').val()) {
      $('#pass_message').html('<img src="https://img.icons8.com/emoji/48/000000/check-mark-emoji.png"/><h4 style="color: green;">Password Matched</h4>');
    }
    else {
      $('#pass_message').html('<img src="https://img.icons8.com/emoji/50/000000/cross-mark-emoji.png"/><h4 style="color: red;">Kindly Match The Password</h4>');
    }
  });


  $("#submitBtn").click(function () {
    var name = $("#fname").val();
    var email = $("#email").val();
    var pass = $("#pass").val();
    var confirmPass = $("#cpass").val();
    var country = $("#country").val();
    var gender = $("#exampleSelectGender").val();
    var description = $("#exampleTextarea1").val();
    if (name == '' || email == '' || pass == '' || confirmPass == '' || country == '' || gender == '' || description == '') {
      swal({
        title: "Fields Empty",
        text: "Check the missing fields!!",
        icon: "warning",
        button: "OK",
      });
    }
    else {
      swal({
        title: "Success",
        text: "Data Submitted!!",
        icon: "success",
        button: "OK",
      });
      req.send();
    }
  });
</script>