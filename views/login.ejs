                <div id="error" class="text-danger">
                  <%- include ("partials/error_messages") %>
                </div>
                <form class="pt-3 text-dark" id = "myForm" action="/users/login" method="POST">
                  <div class="form-group">
                    <b><label class="text-dark" style="font-size: 15px;">E-mail*</label></b>
                    <input type="email"  style="font-size: 12px;" name="email" class="form-control form-control-lg text-muted" id="exampleInputEmail1" placeholder="E-mail">
                  </div>
                  <div class="form-group">
                    <b><label class="text-dark" style="font-size: 15px;">Password*</label></b>
                    <input type="password"  style="font-size: 12px;" name="password" class="form-control form-control-lg text-muted" id="exampleInputPassword1" placeholder="Password">
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="submitBtn">SIGN IN</button>
                  </div>
                  <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check ml-4">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label text-muted form-check-label" for="exampleCheck1">Keep me signed in</label>
                    </div>
                    <a href="/users/forget_password" class="auth-link text-black">Forgot password?</a>
                  </div>
                  <div class="mb-2">
                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                      <i class="fab fa-facebook-f mr-2"></i>Connect using facebook </button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Don't have an account? <a href="/users/register" class="text-primary">Create</a>
                  </div>
                </form>
