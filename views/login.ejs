    var email = $("#exampleInputEmail1").val();
    var pass = $("#exampleInputPassword1").val();
    if (email == '' || pass == '') {
      swal({
        title: "Fields Empty",
        text: "Check the missing fields!!!",
        icon: "warning",
        button: "OK",
      });
    }
    else {
      swal({
        title: "Success",
        text: "Data Submitted!!",
        icon: "success",
        button: "OK",
      });
