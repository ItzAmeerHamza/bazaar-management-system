        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <a class="fas fa-arrow-circle-left" class="btn btn-primary text-black"  style="height: 50px; width: 50px;" href="/"></a>
                <div align="center" class="brand-logo"  style="color: black;">
