<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header bg-white">
          <h5 class="modal-title" id="exampleModalLabel">Add Your Shop</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/shops/createShop" method="POST" enctype="multipart/form-data">
          <div class="modal-body bg-white">
            <div class="form-group">
              <label for="exampleInputEmail1">Shop Name</label>
              <input type="text" class="form-control" name="name" placeholder="Type here">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Shop Title</label>
              <input type="text" class="form-control" name="title" placeholder="Type here">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Description</label>
              <textarea class="form-control" name="description" rows="4"></textarea>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Address</label>
              <input type="text" class="form-control" name="address" placeholder="Type here">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Shop Phone</label>
              <input type="text" class="form-control" name="shop_phone" placeholder="Type here">
            </div>
            <input type="hidden" name="user" value="<%= currentUser.id%>">
          </div>
          <div class="modal-footer bg-white">
            <div class="container">
              <div class="row">
                <button type="button" class="col-6 btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="col-6 btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  